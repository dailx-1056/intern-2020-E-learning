<div class="container-fluid">
  <div class="row">
    <div class="col-12 mt-3">
      <div class="card">
        <div class="card-horizontal">
          <div class="img-square-wrapper">
            <%= image_tag "index.jpeg", {alt: t("course.picture_alt"), class: "course-image"} %>
          </div>
          <div class="card-body">
            <%= link_to course.name, course, {class: "card-title h4"} %>
            <p class="card-text"><%= course.description %></p>
          </div>
        </div>
        <div class="card-footer">
            <small class="text-muted"><%= course.updated_at %></small>
        </div>
      </div>
    </div>
  </div>
</div>
