<% provide :title, t("common.users") %>

<div class="container">
  <h2><%= t "common.users" %></h2>
  <div class="search-border">
    <%= render "search_form" %>
  </div>
  <div>
    <%= render "search_form" %>
  </div>
  <div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col"><%= t "user.no" %></th>
          <th scope="col"><%= t "field.code" %></th>
          <th scope="col"><%= t "field.email" %></th>
          <th scope="col"><%= t "field.role" %></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody id="users">
        <%= render @users %>
      </tbody>
    </table>
    <div id="users-paginate">
      <%= paginate @users, remote: true, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
